<%= form_with method: 'get' do |form| %>
  <%= hidden_params_field :filter_date %>
  <%= hidden_params_field :filter_status %>
  <%= form.label :filter_type, t("flex.tasks.partials.type_filter.label"), class: 'usa-label' %>
  <%= form.select :filter_type, \
    [
      [t("flex.tasks.partials.type_filter.options.all"), ""],
      [t("flex.tasks.partials.type_filter.options.overdue"), "overdue"],
      [t("flex.tasks.partials.type_filter.options.today"), "today"],
      [t("flex.tasks.partials.type_filter.options.tomorrow"), "tomorrow"],
      [t("flex.tasks.partials.type_filter.options.this_week"), "this_week"],
    ],
    { include_blank: false, selected: params[:filter_type] },
    { class: 'usa-select', onchange: 'this.form.submit()' } %>
<% end %>
