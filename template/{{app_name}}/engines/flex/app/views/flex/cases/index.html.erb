<%= content_for :title, model_class.name.titleize %>

  <!-- Main content -->
  <main class="usa-section">
    <div class="grid-container">
      <h1 class="usa-heading-xl"><%= model_class.name.titleize.sub('Case', ' Cases') %></h1>

      <ul class="usa-nav__primary display-flex">
        <li class="usa-nav__primary-item">
          <%= link_to "Open", polymorphic_path(model_class), class: ('usa-current' if action_name == 'index') %>
        </li>
        <li class="usa-nav__primary-item">
          <%= link_to "Closed", polymorphic_path(model_class, action: "closed"), class: ('usa-current' if action_name == 'closed') %>
        </li>
      </ul>

      <!-- Cases -->
      <table class="usa-table usa-table--borderless usa-table--striped">
        <thead>
          <tr>
            <th scope="col">Case ID</th>
            <th scope="col">Created</th>
          </tr>
        </thead>
        <tbody>
          <% if @cases.any? %>
            <% @cases.each do |kase| %>
              <tr>
                <td><%= kase.id %></td>
                <td><%= kase.created_at.strftime('%m/%d/%Y') %></td>
                <td>
                  <%= link_to "View", polymorphic_path(kase), class: "usa-button usa-button--outline" %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="3" class="text-center">No cases</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </main>
</div>
