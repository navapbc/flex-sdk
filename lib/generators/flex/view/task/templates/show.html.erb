<%# Show view for displaying a <%= name.underscore.humanize.downcase %>
    Required locals:
    - assigned_user_display_text: String - The name of the user assigned to this <%= name.underscore.humanize.downcase %>
    - <%= name.underscore.singularize %>: Flex::Task - The <%= name.underscore.humanize.downcase %> object

    Optional locals:
    - task_details_partial: String - The HTML to render for the <%= name.underscore.humanize.downcase %> details. If not provided, the view will look for a partial named after the <%= name.underscore.humanize.downcase %> type within the `details` directory.
    
    Example usage:
      render template: 'flex/<%= name.underscore.pluralize %>/default/show', locals: {
        <%= name.underscore.singularize %>: @<%= name.underscore.singularize %>,
        assigned_user_display_text: assigned_user&.full_name || "Not Assigned"
      }
%>
<main class="usa-section">
  <div class="grid-container">
    <nav class="usa-breadcrumb" aria-label="Breadcrumbs">
      <ol class="usa-breadcrumb__list">
        <li class="usa-breadcrumb__list-item">
          <%%%= link_to t("flex.<%= name.underscore.pluralize %>.breadcrumbs.home"), "/", class: "usa-breadcrumb__link" %>
        </li>
        <li class="usa-breadcrumb__list-item">
          <%%%= link_to t("flex.<%= name.underscore.pluralize %>.breadcrumbs.<%= name.underscore.pluralize %>"), url_for(only_path: true, action: :index), class: "usa-breadcrumb__link" %>
        </li>
        <li class="usa-breadcrumb__list-item usa-current" aria-current="page">
          <span><%%%= t("<%= name.underscore.pluralize %>.types.#{<%= name.underscore.singularize %>.type.underscore}") %></span>
        </li>
      </ol>
    </nav>
    <h1 class="section-heading-h1"><%%%= t("<%= name.underscore.pluralize %>.types.#{<%= name.underscore.singularize %>.type.underscore}") %></h1>
    <div class="border-bottom-1px margin-bottom-1 padding-bottom-1">
      <div class="grid-container">
        <div class="grid-row grid-gap-2">
          <div class="grid-col-auto">
            <strong><%%%= t("flex.<%= name.underscore.pluralize %>.show.details.status") %>:</strong> <%%%= t("<%= name.underscore.pluralize %>.statuses.#{<%= name.underscore.singularize %>.status}") %>
          </div>
          <div class="grid-col-auto">
            <strong><%%%= t("flex.<%= name.underscore.pluralize %>.show.details.due_on") %>:</strong> <%%%= local_en_us <%= name.underscore.singularize %>.due_on %>
          </div>
          <div class="grid-col-auto">
            <strong><%%%= t("flex.<%= name.underscore.pluralize %>.show.details.assigned_to") %>:</strong> <%%%= assigned_user_display_text %>
          </div>
        </div>
      </div>
    </div>
    <section class="usa-section padding-top-2">
      <%% if flash["<%= name.underscore.singularize %>-message"] %>
        <div class="usa-alert usa-alert--info usa-alert--no-icon">
          <div class="usa-alert__body">
            <p class="usa-alert__text">
              <%%%= flash["<%= name.underscore.singularize %>-message"] %>
            </p>
          </div>
        </div>
      <%% end %>
      <h2 class="section-heading-h2"><%%%= t("flex.<%= name.underscore.pluralize %>.show.headers.<%= name.underscore.singularize %>_details") %></h2>
      <%% if content_for?(:<%= name.underscore.singularize %>_details_partial) %>
        <%%%= yield(:<%= name.underscore.singularize %>_details_partial) %>
      <%% else %>
        <%%%= render partial: "details/#{<%= name.underscore.singularize %>.type.underscore}", locals: local_assigns.to_h %>
      <%% end %>
    </section>
  </main>
