<%# Show view for displaying a <%= name.underscore.humanize.downcase %>
  Required locals:
  - @<%= name.underscore.singularize %>: The <%= name.underscore.humanize.downcase %> object to display
  - model_class: Class - The model class for polymorphic routing (e.g., PassportCase)
  
  Optional content blocks:
  - :case_summary - Additional summary information to display
  - :case_details - Main case details content
  
  Example usage:
    @<%= name.underscore.singularize %> = <%= name.classify %>.find(params[:id])
    model_class = <%= name.classify %>
%>
<main class="usa-section">
  <div class="grid-container">

    <nav class="usa-breadcrumb" aria-label="Breadcrumbs">
      <ol class="usa-breadcrumb__list">
        <li class="usa-breadcrumb__list-item">
          <%%%= link_to "<%= name.underscore.humanize.pluralize %>", polymorphic_path(model_class), class: "usa-breadcrumb__link" %>
        </li>
        <li class="usa-breadcrumb__list-item usa-current" aria-current="page">
          <%%%= @<%= name.underscore.singularize %>.id %>
        </li>
      </ol>
    </nav>
    <h1 class="usa-heading-xl"><%= name.underscore.humanize %> ID: <%%%= @<%= name.underscore.singularize %>.id %></h1>
    <%%%= yield :case_summary %>
    <p>Status: <%%%= render partial: "flex/cases/status_tag", locals: { status: @<%= name.underscore.singularize %>.status } %></p>

    <div class="grid-row grid-gap border-top-2px border-base-lighter padding-top-2">
      <div class="tablet:grid-col-3 margin-bottom-4 tablet:margin-bottom-0">
        <nav aria-label="Side navigation,">

          <ul class="usa-sidenav">
            <li class="usa-sidenav__item">
              <a href="javascript:void(0);" class="usa-current">Overview</a>
            </li>
            <li class="usa-sidenav__item">
              <a href="javascript:void(0);">Tasks</a>
            </li>
            <li class="usa-sidenav__item">
              <a href="javascript:void(0);">Application details</a>
            </li>
            <li class="usa-sidenav__item">
              <a href="javascript:void(0);">Documents</a>
            </li>
            <li class="usa-sidenav__item">
              <a href="javascript:void(0);">Case history</a>
            </li>
            <li class="usa-sidenav__item">
              <a href="javascript:void(0);">Notes</a>
            </li>
          </ul>
        </nav>
      </div>

      <div class="tablet:grid-col-9">
        <%%%= yield :case_details %>
      </div>
    </div>
  </div>
</main>
